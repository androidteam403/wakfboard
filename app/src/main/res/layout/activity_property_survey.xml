                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_12" />


            </RelativeLayout>


