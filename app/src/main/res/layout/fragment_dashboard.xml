<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.thresholdsoft.praanadhara.ui.mainactivity.fragments.userprofilefrag.UserProfileMvpPresenter" />
    </data>

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/forty_dp"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/one_hundred_dp"
                android:layout_height="@dimen/one_hundred_dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="First Name*"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_five_dp"
                android:background="@drawable/rectangular_light_round"
                android:fontFamily="@font/roboto_regular"
                android:hint="anupama"
                android:inputType="text"
                android:paddingStart="@dimen/ten_dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Last Name*"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_five_dp"
                android:background="@drawable/rectangular_light_round"
                android:fontFamily="@font/roboto_regular"
                android:hint="katamreddy"
                android:inputType="text"
                android:paddingStart="@dimen/ten_dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Email ID"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Country Code"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="------"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Contact Number"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/one_hundred_dp"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:background="@drawable/button_rounded_blue"
                    android:backgroundTint="@color/yellow"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()->presenter.onUpdateClick()}"
                    android:text="Update"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="@dimen/one_hundred_dp"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:background="@drawable/button_rounded_blue"
                    android:backgroundTint="@color/grey"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()->presenter.onCancelClick()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
