<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="survey"
            type="com.thresholdsoft.praanadhara.ui.surveylistactivity.model.SurveyModel" />

        <variable
            name="callback"
            type="com.thresholdsoft.praanadhara.ui.surveystatusactivity.SurveyStatusMvpView" />
    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/twenty_dp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/adapter_survey_background"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/fifty_five_dp"
                            android:layout_height="@dimen/seventy_five_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/farmer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="@dimen/zero_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@{survey.farmerName}"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_13" />

                                <ImageView
                                    android:layout_width="@dimen/zero_dp"
                                    android:layout_height="@dimen/twenty_dp"
                                    android:layout_weight="0.1"
                                    android:contentDescription="@string/app_name"
                                    android:paddingEnd="@dimen/ten_dp"
                                    android:src="@drawable/edit_ic"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:text="@{survey.farmerAddress}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_dimen_12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="@dimen/zero_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="@string/label_mobile_number"
                                        android:textSize="@dimen/text_dimen_11"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{survey.farmerNumber}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_dimen_12" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/zero_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Email"
                                        android:textSize="@dimen/text_dimen_11"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@{survey.farmerEmail}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_dimen_12" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_marginEnd="@dimen/fifteen_dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eighteen_dp"
                            android:layout_marginEnd="@dimen/ten_dp"
                            android:layout_marginBottom="@dimen/twenty_five_dp"
                            android:text="@string/carry_out_your_entire_project_from_start_to_finish_and_report_to_stakeholders_using_one_solution_without_worrying_about_piles_of_paperwork"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_12" />

                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/three_hundred_dp"/>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="@dimen/seventy_five_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/points" />

                    <RadioButton
                        android:id="@+id/pointsRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:checked="true"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_points"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/one_dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="@dimen/seventy_five_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/lines" />

                    <RadioButton
                        android:id="@+id/linesRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:checked="true"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_lines"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/one_dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="@dimen/seventy_five_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/polygon" />

                    <RadioButton
                        android:id="@+id/polygonRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:checked="true"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_polygons"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/one_hundred_forty_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/thirty_five_dp"
                android:background="@drawable/button_rounded_blue"
                android:backgroundTint="@color/complaint_btn_color"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/thirty_five_dp"
                android:text="@string/label_start_survey"
                android:textColor="@color/white"
                android:onClick="@{()-> callback.startSurvey(survey)}"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
